@model HW_26.Models.Product
@{ 
    Layout = null;
}
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1"><p class="bg-info">Категория: @Model.Category.List</p></div>
    <form id="@Model.ProductId" asp-action="AddToCart"
          asp-controller="Cart" method="post">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text р-1">
            <button type="submit"
                    class="btn btn-success btn-sm" style="float:right">
                Добавить в корзину
            </button>
        </span>
    </form>
</div>